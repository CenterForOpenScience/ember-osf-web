{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noEmitOnError": false,
    "noEmit": true,
    "strictNullChecks": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "paths": {
      "ember-osf-web/tests/*": ["tests/*"],
      "ember-osf-web/*": ["app/*"]
    },
    "experimentalDecorators": true
  },
  "include": [
      "app",
      "tests"
  ]
}
