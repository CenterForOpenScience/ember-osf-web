<div
    local-class='ChartWrapper panel'
>
    <div local-class='panel-heading clearfix'>
        <h3 local-class='panel-title'>{{t @chartSpec.titleKey}}</h3>
    </div>
    <div local-class='ChartContainer panel-body'>
        <div
            local-class='Chart {{if @overlayShown 'Blurred'}}'
            data-test-analytics-chart={{@chartSpec.chartKey}}
            {{c3-chart c3Config=this.c3ChartConfig}}
        ></div>
        {{#if @overlayShown}}
            <div local-class='ChartOverlay'>
                {{#if @apiError}}
                    <p>{{t 'analytics.metricsApiError'}}</p>
                {{else}}
                    {{loading-indicator dark=true}}
                {{/if}}
            </div>
        {{/if}}
    </div>
</div>
