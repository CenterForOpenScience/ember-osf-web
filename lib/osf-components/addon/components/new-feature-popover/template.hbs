
{{#if 'search'}}
    <section
        local-class='search-help-tutorial'
        data-test-search-help
    >
        <span>
            <h2 class='visible'>
                {{t 'search_help.header_1'}}
            </h2>
            <h2 class='hidden'>
                {{t 'search_help.header_2'}}
            </h2>
            <h2 class='hidden'>
                {{t 'search_help.header_3'}}
            </h2>
        </span>
        <span>
            <p class='visible'>{{t 'search_help.body_1'}}</p>
            <p class='hidden'>{{t 'search_help.body_2'}}</p>
            <p class='hidden'>{{t 'search_help.body_3'}}</p>
        </span>
        <div local-class='pagination'>
            <span local-class='enummeration'>
                <p class='visible' data-test-help-1>{{t 'search_help.index_1'}}</p>
                <p class='hidden' data-test-help-2>{{t 'search_help.index_2'}}</p>
                <p class='hidden' data-test-help-3>{{t 'search_help.index_3'}}</p>
            </span>
            <span local-class='help-buttons'>
                <button type='reset' local-class='skip-button' {{on 'click' this.dismissHelp}}>{{t 'search_help.footer.skip'}}</button>
                <button type='submit' name='helpNextButton' local-class='next-button' {{on 'click' this.updateHelp}}>{{t 'search_help.footer.next'}}</button>
            </span>
        </div>
    </section>
{{else}}
    <EmberPopover
        @targetId={{@triggerElement}}
        @isShown={{this.shouldShow}}
        @event='none'
        @side={{@side}}
        @tooltipClass='new-feature-modal'
        as |popover|
    >
        <h3 data-test-popover-header>
            {{yield to='header'}}
        </h3>

        <section data-test-popover-body>
            {{yield to='body'}} 
        </section>

        <footer
            data-test-popover-footer
            local-class='FlexFooter'
        >
            {{yield to='footer'}}
            <label data-test-not-again-checkbox>
                {{t 'osf-components.new-feature-popover.doNotShowAgain'}}
                <Input @type='checkbox' @checked={{this.notAgain}} />
            </label>
            <Button
                data-test-got-it-button
                @type='primary'
                {{on 'click' (queue this.onAccept (action 'hide' target=popover))}}
            >
                {{t 'osf-components.new-feature-popover.acknowledge'}}
            </Button>
        </footer>
    </EmberPopover>
{{/if}}
