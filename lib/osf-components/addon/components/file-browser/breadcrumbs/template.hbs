<nav aria-label={{t 'osf-components.file-browser.breadcrumbs'}} local-class='Breadcrumbs' ...attributes>
    <ol data-test-breadcrumbs>
        {{#each @breadcrumbs as |breadcrumb index| }}
            <li>
                {{#if (eq breadcrumb @currentFolder)}}
                    <span data-test-breadcrumb={{breadcrumb.name}}>
                        <FileBrowser::Breadcrumbs::Crumb
                            @name={{breadcrumb.name}}
                            @icon={{breadcrumb.iconLocation}}
                            @isProvider={{eq index 0}}
                        />
                    </span>
                {{else}}
                    <OsfLink
                        data-test-breadcrumb={{breadcrumb.name}}
                        data-analytics-name='Breadcrumb navigation click'
                        @href='#'
                        {{on 'click' (fn @goToFolder breadcrumb)}}
                    >
                        <FileBrowser::Breadcrumbs::Crumb
                            @name={{breadcrumb.name}}
                            @icon={{breadcrumb.iconLocation}}
                            @isProvider={{eq index 0}}
                        />
                    </OsfLink>
                {{/if}}
            </li>
        {{/each}}
    </ol>
</nav>
