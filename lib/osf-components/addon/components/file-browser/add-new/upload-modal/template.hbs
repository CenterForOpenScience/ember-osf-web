<OsfDialog
    @isOpen={{@isOpen}}
    @onClose={{action (mut @isOpen) false}}
    as |dialog|
>
    <dialog.heading>
        Upload
    </dialog.heading>
    <dialog.main>
        {{#let (unique-id 'upload-files-dropzone') as |id|}}
            {{#let (unique-id 'browse-button') as |buttonId|}}
                <DropzoneWidget
                    @buildUrl={{this.buildUrl}}
                    @options={{this.dropzoneOptions}}
                    @dropzone={{false}}
                    @addedfile={{this.addedFile}}
                    @success={{this.success}}
                    @error={{this.error}}
                    @dragenter={{fn (mut this.dropping) true}}
                    @dragover={{fn (mut this.dropping) true}}
                    @drop={{fn (mut this.dropping) false}}
                    @dragleave={{fn (mut this.dropping) false}}
                    @enable={{true}}
                    @id={{id}}
                    @clickable={{concat '#' buttonId}}
                >
                    <BsButton id={{buttonId}}>
                        Browse
                    </BsButton>
                    <Input />
                </DropzoneWidget>
            {{/let}}
        {{/let}}
    </dialog.main>
</OsfDialog>
