<footer local-class="Footer">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8 col-md-offset-2">
                <p>
                    <span class="copyright">
                        {{t 'footer.copyright' currentYear=this.currentYear}}
                    </span>
                    <a href="{{this.cos}}" onclick={{action 'click' 'link' 'Footer - cos_io' target=this.analytics}}>
                        {{t 'general.cos'}}
                    </a>
                    <span>
                        {{t 'footer.separator'}}
                    </span>
                    <a href="{{this.termsLink}}" onclick={{action 'click' 'link' 'Footer - terms' target=this.analytics}}>
                        {{t 'footer.terms'}}
                    </a>
                    <span>
                        {{t 'footer.separator'}}
                    </span>
                    <a href="{{this.privacyPolicyLink}}" onclick={{action 'click' 'link' 'Footer - privacy' target=this.analytics}}>
                        {{t 'footer.privacy'}}
                    </a>
                    <span>
                        {{t 'footer.separator'}}
                    </span>
                    <a href="{{this.statusPage}}" onclick={{action 'click' 'link' 'Footer - status' target=this.analytics}}>
                        {{t 'footer.status'}}
                    </a>
                    <span>
                        {{t 'footer.separator'}}
                    </span>
                    <a href="{{this.apiDocs}}" onclick={{action 'click' 'link' 'Footer - api_docs' target=this.analytics}}>
                        {{t 'general.api'}}
                    </a>
                    <br>
                    <a href="{{this.topGuidelines}}" onclick={{action 'click' 'link' 'Footer - top' target=this.analytics}}>
                        {{t 'footer.top'}}
                    </a>
                    <span>
                        {{t 'footer.separator'}}
                    </span>
                    <a href="{{this.rpp}}" onclick={{action 'click' 'link' 'Footer - rpp' target=this.analytics}}>
                        {{t 'footer.rpp'}}
                    </a>
                    <span>
                        {{t 'footer.separator'}}
                    </span>
                    <a href="{{this.rpcb}}" onclick={{action 'click' 'link' 'Footer - rpcb' target=this.analytics}}>
                        {{t 'footer.rpcb'}}
                    </a>
                </p>
                <p>
                    <a
                        href="{{this.twitter}}"
                        aria-label={{t 'social.twitter'}}
                        onclick={{action 'click' 'link' 'Footer - social_twitter' target=this.analytics}}
                    >
                        <i class="fa fa-twitter fa-2x"></i>
                    </a>
                    <a
                        href="{{this.facebook}}"
                        aria-label={{t 'social.facebook'}}
                        onclick={{action 'click' 'link' 'Footer - social_facebook' target=this.analytics}}
                    >
                        <i class="fa fa-facebook fa-2x"></i>
                    </a>
                    <a
                        href="{{this.googleGroup}}"
                        aria-label={{t 'social.google_group'}}
                        onclick={{action 'click' 'link' 'Footer - social_google_group' target=this.analytics}}
                    >
                        <i class="fa fa-group fa-2x"></i>
                    </a>
                    <a
                        href="{{this.github}}"
                        aria-label={{t 'social.github'}}
                        onclick={{action 'click' 'link' 'Footer - social_github' target=this.analytics}}
                    >
                        <i class="fa fa-github fa-2x"></i>
                    </a>
                </p>
            </div>
        </div>
    </div>
</footer>
