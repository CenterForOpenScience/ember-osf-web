<OsfLink @href={{this.project.links.html}}>
    <div local-class='NoteworthyProject__item'>
        <h5 data-test-nnwp-project-title>{{this.project.title}}</h5>
        <span local-class='Byline'>
            <i>
                {{t 'dashboard.noteworthy.by'}}
                <ContributorList
                    data-test-nnwp-project-contributors
                    @model={{this.project}}
                />
            </i>
        </span>
        <p data-test-nnwp-project-description>
            {{this.project.description}}
        </p>
    </div>
</OsfLink>
