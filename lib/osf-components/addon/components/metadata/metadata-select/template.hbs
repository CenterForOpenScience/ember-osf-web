<div local-class='metadata-select-container {{if @isMobile 'mobile'}}'>
    <div local-class='title' data-test-select-title>
        {{ @template.schemaName }}
    </div>
    <div local-class='description' data-test-select-description>
        {{#if @template.template.schema:description}}
            {{ @template.template.schema:description }}
        {{else}}
            {{ @template.template.description}}
        {{/if}}
    </div>
    <div local-class='action'>
        <Button
            data-test-select-button
            data-analytics-name='Select metadata'
            disabled= {{not @template.canSelect}}
            {{on 'click' (fn @selectTemplate @template) }}
        >
            {{ t 'metadata.add-flow.select' }}
        </Button>

        {{#unless @template.canSelect}}
            <EmberTooltip @autoPlacement={{true}} @targetId={{this.elementId}} > {{t 'metadata.add-flow.template-exists'}} </EmberTooltip>
        {{/unless}}
    </div>
</div>
