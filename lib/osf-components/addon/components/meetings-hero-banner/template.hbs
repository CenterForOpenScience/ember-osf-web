<div local-class='osf-meeting-header-img'>
    <div local-class='osf-meeting-header'>
        <div class='container '>
            <div class='text-center m-b-lg'>
                <h1>
                    <img src='/static/img/meeting-page/osf_meetings_white.png' alt={{t 'osf-components.meetings-hero-banner.image_alt'}} style='width: 80%'>
                </h1>
                <h3>
                    {{t 'osf-components.meetings-hero-banner.h3'}}
                </h3>
            </div>
            <div local-class='network-img'> </div>
            <div class='row'>
                <div class='col-md-6 col-lg-5 col-xl-4 text-center m-b-lg'>
                    <i class='fa fa-users m-v-sm' local-class='user-icon icon-circle'></i>
                    <h3 class='f-w-xl'> {{t 'osf-components.meetings-hero-banner.conference_organizers_h3'}} </h3>
                    <div class='text-left'>
                        <p>
                            {{t 'osf-components.meetings-hero-banner.conference_organizers_help_text'}}
                        </p>
                    </div>
                    <div class='p-v-md'>
                        <OsfButton @type='success' @onClick={{action this.toggleRegisterPanel}}>{{t 'osf-components.meetings-hero-banner.conference_organizers_register_button'}}</OsfButton>
                    </div>
                    <CpPanel @open={{this.registerPanelOpen}} as |panel| >
                        <panel.body>
                            <div class='m-lg osf-box-lt p-md text-left'>
                                {{t 'osf-components.meetings-hero-banner.conference_organizers_register_panel_texts'}}
                            </div>
                        </panel.body>
                    </CpPanel>
                </div>
                <div class='col-md-6 col-lg-5 col-lg-offset-2 col-xl-4 col-xl-offset-4 text-center m-b-lg'>
                    <i class='fa fa-cloud-upload m-v-sm' local-class='cloud-icon icon-circle'></i>
                    <h3 class='f-w-xl'> {{t 'osf-components.meetings-hero-banner.conference_participants_h3'}} </h3>
                    <div class='text-left'>
                        <p>
                            {{t 'osf-components.meetings-hero-banner.conference_participants_help_text'}}
                        </p>
                    </div>
                    <div class='p-v-md'>
                        <OsfButton @type='success' @onClick={{action this.toggleUploadPanel}}>{{t 'osf-components.meetings-hero-banner.conference_participants_upload_button'}}</OsfButton>
                    </div>
                    <CpPanel @open={{this.uploadPanelOpen}} as |panel| >
                        <panel.body>
                            <div class='m-lg osf-box-lt p-md text-left'>
                                {{t 'osf-components.meetings-hero-banner.conference_participants_upload_panel_texts'}}
                            </div>
                        </panel.body>
                    </CpPanel>
                </div>
            </div>
        </div>
    </div>
</div>