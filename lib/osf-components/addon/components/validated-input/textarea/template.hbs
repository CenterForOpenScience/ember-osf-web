{{#validated-input/x-input-wrapper
    model=this.model
    changeset=this.changeset
    errors=this.errors
    label=this.label
    valuePath=this.valuePath
    validationStatus=this.validationStatus
    as |inputElementId|
}}
    <Textarea
        aria-label={{this.ariaLabel}}
        id={{or @uniqueID inputElementId}}
        class='form-control'
        placeholder={{this._placeholder}}
        name={{this.valuePath}}
        disabled={{this.disabled}}
        @value={{this.value}}
        {{on 'keyup' (if @onKeyUp @onKeyUp this.noop)}}
    />
{{/validated-input/x-input-wrapper}}
