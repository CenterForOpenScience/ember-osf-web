{{#validated-input/x-input-wrapper
    model=this.model
    changeset=this.changeset
    errors=this.errors
    label=this.label
    valuePath=this.valuePath
    validationStatus=this.validationStatus
    as |inputElementId|
}}
    <label>
        <Input
            id={{inputElementId}}
            name={{this.valuePath}}
            disabled={{this.disabled}}
            @type='checkbox'
            @checked={{this.value}}
        />
        {{yield}}
    </label>
{{/validated-input/x-input-wrapper}}
