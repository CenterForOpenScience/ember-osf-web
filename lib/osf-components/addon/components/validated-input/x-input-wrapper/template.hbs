{{#if this.label}}
    <label for='{{this.inputElementId}}'>{{this.label}}</label>
{{/if}}

{{yield this.inputElementId}}

{{#if (or this.hasError this.hasWarning)}}
    {{#if this.changeset}}
        <ValidationErrors
            data-test-help-block
            local-class='help-block'
            @changeset={{this.changeset}}
            @key={{this.valuePath}}
            @errors={{@errors}}
        />
    {{else}}
        <div data-test-help-block local-class='help-block'>
            {{v-get this.model this.valuePath 'message'}}
        </div>
    {{/if}}
{{/if}}
