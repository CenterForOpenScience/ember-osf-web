{{#if maintenance}}
    {{#bs-alert
        type=alertType
        onDismiss=(action 'dismiss')
    }}
        <strong>{{t 'maintenance.title'}}</strong>
        {{#if maintenance.message.length}}
            {{maintenance.message}}
        {{else}}
            {{t 'maintenance.line1' start=start end=end utc=utc}}
            {{t 'maintenance.line2'}}
        {{/if}}
    {{/bs-alert}}
{{/if}}
