{{#if this.maintenance}}
    <BsAlert
        @type={{this.alertType}}
        @onDismiss={{action this.dismiss}}
    >
        <strong>{{t 'maintenance.title'}}</strong>
        {{#if this.maintenance.message.length}}
            {{this.maintenance.message}}
        {{else}}
            {{t 'maintenance.line1' start=this.start end=this.end utc=this.utc}}
            {{t 'maintenance.line2'}}
        {{/if}}
    </BsAlert>
{{/if}}
