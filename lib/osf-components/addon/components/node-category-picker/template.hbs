{{#if @manager.inEditMode}}
    <div data-test-select-category>
        <PowerSelect
            @options={{this.categories}}
            @selected={{@manager.selectedCategory}}
            @searchEnabled={{true}}
            @onChange={{action @manager.onSelect}}
            @disabled={{@manager.save.isRunning}}
            as |category|
        >
            <NodeCategory @category={{category}} />
        </PowerSelect>
    </div>
{{/if}}
