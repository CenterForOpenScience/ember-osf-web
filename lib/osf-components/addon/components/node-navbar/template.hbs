{{#ember-wormhole to=secondaryNavbarId renderInPlace=renderInPlace}}
    <nav class='navbar osf-project-navbar' role='navigation'>
        <div class='container'>
            <div class='navbar-header'>

                <button type='button' class='navbar-toggle collapsed' local-class='NodeNavbar__navbar-toggle' onclick={{action 'toggleNav'}}>
                    <span class='sr-only'>{{t 'node_navbar.toggle'}}</span>
                    <span class='fa fa-bars fa-lg'></span>
                </button>

                <span class='navbar-brand visible-xs visible-sm'>
                    {{t 'node_navbar.project_nav'}}
                </span>
            </div>
            {{#bs-collapse collapsed=collapsedNav class='navbar-collapse'}}
                <ul class='nav navbar-nav'>
                    {{#node-navbar/link nodeId=node.id useLinkTo=false extraClasses='project-title'}}
                        {{node.title}}
                    {{/node-navbar/link}}
                    {{node-navbar/link nodeId=node.id useLinkTo=false destination='files'}}
                    {{node-navbar/link nodeId=node.id useLinkTo=false destination='wiki'}}
                    {{node-navbar/link nodeId=node.id useLinkTo=false destination='analytics'}}
                    {{#unless node.registration}}
                        {{node-navbar/link nodeId=node.id useLinkTo=false destination='registrations'}}
                    {{/unless}}

                    {{#if node.currentUserIsContributor}}
                        {{node-navbar/link nodeId=node.id useLinkTo=false destination='contributors'}}
                        {{#if currentUserCanEdit}}
                            {{node-navbar/link nodeId=node.id useLinkTo=false destination='addons'}}
                        {{/if}}
                        {{node-navbar/link nodeId=node.id useLinkTo=false destination='settings'}}
                    {{/if}}
                </ul>
            {{/bs-collapse}}
        </div>
    </nav>
{{/ember-wormhole}}
{{#unless renderInPlace}}
    <div local-class='NodeNavbar__navbar-buffer'></div>
{{/unless}}