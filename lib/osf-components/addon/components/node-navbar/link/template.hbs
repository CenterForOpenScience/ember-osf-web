{{#if this.useLinkTo}}
    <OsfLink
        data-test-node-navbar-link={{or @destination @node.id}}
        class={{this.extraClasses}}
        @route={{this.routeName}}
        @models={{array @node.id}}
    >
        {{#if (has-block)}}
            {{yield}}
        {{else}}
            {{t this.translatingKey}}
        {{/if}}
    </OsfLink>
{{else}}
    <OsfLink
        data-test-node-navbar-link={{or @destination @node.id}}
        class={{this.extraClasses}}
        @href='/{{@node.id}}/{{@destination}}'
    >
        {{#if (has-block)}}
            {{yield}}
        {{else}}
            {{t this.translatingKey}}
        {{/if}}
    </OsfLink>
{{/if}}
