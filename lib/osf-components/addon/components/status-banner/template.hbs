{{#each this.messages as |stat|}}
    <BsAlert
        @type={{stat.class}}
        @dismissible={{stat.dismiss}}
        @classNames={{if stat.jumbo (local-class 'StatusBanner__jumbo')}}
    >
        <div class="{{if stat.jumbo 'jumbotron'}}">
            <p>{{t stat.id extra=stat.extra}}</p>
        </div>
    </BsAlert>
{{/each}}
