{{#if @isValidating}}
    <LoadingIndicator @inline={{true}} @dark={{true}} />
{{else}}
    {{#if this.errors}}
        <div
            data-test-validation-errors={{@key}}
            local-class='Errors'
            ...attributes
        >
            {{#each this.errors as |error|}}
                <p>{{~error~}}</p>
            {{/each}}
        </div>
    {{/if}}
{{/if}}
