{{#if (eq this.totalCount 1)}}

    {{yield (hash item=this.firstItem)}}

{{else if (eq this.totalCount 2)}}

    {{yield (hash item=this.firstItem)~}}
    {{~t 'list.two_item.delimiter'~}}
    {{~yield (hash item=this.lastItem)}}

{{else if (gt this.totalCount 2)}}

    {{yield (hash item=this.firstItem)~}}
    {{~t 'list.many_item.first_delimiter'~}}
    {{#each this.middleItems as | item index |}}
        {{~#if index}}
            {{~t 'list.many_item.each_delimiter'~}}
        {{/if}}
        {{~yield (hash item=item)~}}
    {{/each}}

    {{~t 'list.many_item.last_delimiter'~}}
    {{#if this.lastItem}}
        {{~yield (hash item=this.lastItem)}}
    {{else}}
        {{~yield (hash
            remainingCount=this.remainingCount
        )}}
    {{/if}}
{{/if}}