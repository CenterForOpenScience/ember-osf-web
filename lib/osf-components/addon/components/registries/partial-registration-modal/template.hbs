{{#if @rootNode}}
    <Registries::PartialRegistrationModal::Manager
        @rootNode={{@rootNode}}
        @onContinue={{@onContinue}}
        as |manager|
    >
        {{yield (hash
            heading=(component 'registries/partial-registration-modal/heading')
            main=(component 'registries/partial-registration-modal/main' manager=manager)
            footer=(component 'registries/partial-registration-modal/footer' continue=manager.continue)
        )}}
    </Registries::PartialRegistrationModal::Manager>
{{/if}}
