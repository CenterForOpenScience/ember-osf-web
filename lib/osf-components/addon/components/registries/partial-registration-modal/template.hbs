{{#if @rootNode}}
    <Registries::PartialRegistrationModal::Manager
        @rootNode={{@rootNode}}
        @onContinue={{@onContinue}}
        as |modalManager|
    >
        {{yield (hash
            heading=(component 'registries/partial-registration-modal/heading')
            main=(component 'registries/partial-registration-modal/main' modalManager=modalManager)
            footer=(component 'registries/partial-registration-modal/footer' continue=modalManager.continue)
        )}}
    </Registries::PartialRegistrationModal::Manager>
{{/if}}
