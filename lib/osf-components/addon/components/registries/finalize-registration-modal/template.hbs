{{#if @registration}}
    <Registries::FinalizeRegistrationModal::Manager
        @registration={{@registration}}
        @onSubmitRegistration={{@onSubmitRegistration}}
        as |manager|
    >
        {{yield (hash
            heading=(component 'registries/finalize-registration-modal/heading')
            main=(component 'registries/finalize-registration-modal/main' manager=manager)
            footer=(component 'registries/finalize-registration-modal/footer' manager=manager)
        )}}
    </Registries::FinalizeRegistrationModal::Manager>
{{/if}}
