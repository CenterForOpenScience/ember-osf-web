{{#let @mapper as |Mapper|}}
    <Mapper as |renderers|>
        {{#let (get renderers @schemaBlock.blockType) as |Renderer|}}
            <Renderer
                @changeset={{@changeset}}
                @schemaBlock={{@schemaBlock}}
                @optionBlocks={{@optionBlocks}}
                @node={{@node}}
                @disabled={{this.disabled}}
                @shouldShowMessages={{this.shouldShowMessages}}
                @uniqueID={{@uniqueID}}
                @registrationResponses={{@registrationResponses}}
            />
        {{/let}}
    </Mapper>
{{/let}}