{{#if this.helpText}}
    {{#let (unique-id 'helper-text-icon') as |id|}}
        <FaIcon
            local-class='helper-text-icon'
            tabindex='0'
            id={{id}}
            @icon='question-circle'
            @ariaHidden={{false}}
            ...attributes
        />
        <EmberPopover
            @targetId={{id}}
            @tooltipClass={{local-class 'schema-block-popover'}}
        >
            {{this.helpText}}
        </EmberPopover>
    {{/let}}
{{/if}}