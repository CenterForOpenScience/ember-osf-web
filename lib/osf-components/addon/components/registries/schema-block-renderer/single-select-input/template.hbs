<FormControls
    @changeset={{@changeset}}
    @disabled={{@disabled}}
    @shouldShowMessages={{@shouldShowMessages}}
    as |form|
>
    <form.select
        data-test-single-select-input
        @id={{@schemaBlock.registrationResponseKey}}
        @valuePath={{@schemaBlock.registrationResponseKey}}
        @options={{@options}}
        as |option|
    >
        {{option.displayText}}
    </form.select>
</FormControls>