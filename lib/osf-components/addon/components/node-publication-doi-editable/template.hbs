<form {{on 'submit' @manager.save}}>
    <ValidatedInput::Custom
        data-test-publication-doi-input
        @changeset={{@manager.changeset}}
        @valuePath='articleDoi'
        @shouldShowMessages={{@manager.didValidate}}
        @placeholder={{this.doiPlaceholder}}
    >
        <div local-class='input-group'>
            <span local-class='input-group-addon'>{{this.doiUrlPrefix}}</span>
            <Input
                @value={{get @manager.changeset 'articleDoi'}}
                @type='text'
                @class='form-control'
                @placeholder={{this.doiPlaceholder}}
            />
        </div>
    </ValidatedInput::Custom>

    <div local-class='Controls'>
        <Button
            data-analytics-name='Cancel'
            data-test-cancel-publication-doi
            disabled={{@manager.save.isRunning}}
            {{on 'click' (action @manager.cancel)}}
        >
            {{t 'general.cancel'}}
        </Button>
        <Button
            data-analytics-name='Save'
            data-test-save-publication-doi
            disabled={{@manager.save.isRunning}}
            type='submit'
            @type='primary'
        >
            {{t 'general.save'}}
        </Button>
    </div>
</form>
