<Subjects::Display
    @subjects={{@subjectsManager.selectedSubjects}}
    @removeSubject={{@subjectsManager.unselectSubject}}
/>

<AriaTabs
    data-test-subject-widget-tabs
    @defaultIndex={{0}} 
    local-class='Tabs'
    as |tab|
>
    <tab.tabList
        local-class='TabList'
        as |tablist|
    >
        <tablist.tab>{{t 'osf-components.subjects.browse.browse_all'}}</tablist.tab>
        <tablist.tab>{{t 'osf-components.subjects.search.search_all'}}</tablist.tab>
    </tab.tabList>
    <tab.tabPanel>
        <Subjects::Browse
            data-analytics-scope='Browse'
            @subjectsManager={{@subjectsManager}}
        />
    </tab.tabPanel>
    <tab.tabPanel>
        <Subjects::Search
            data-analytics-scope='Search'
            @subjectsManager={{@subjectsManager}}
        />
    </tab.tabPanel>
</AriaTabs>
