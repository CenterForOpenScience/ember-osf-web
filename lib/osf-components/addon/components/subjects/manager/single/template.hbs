{{yield (hash
    subject=this.subject
    isSelected=this.isSelected
    isSaved=this.isSaved
    hasSelectedChild=this.hasSelectedChild

    numChildren=this.numChildren
    isLoadingChildren=this.loadChildren.isRunning
    children=this.children

    toggleSelected=(action this.toggleSelected)
    loadChildren=(perform this.loadChildren)

    ChildSubjectManager=(component
        'subjects/manager/single'
        subjectsManager=@subjectsManager
    )
)}}
