<PowerSelect
    @selected={{this.selectedSubject}}
    @search={{perform this.querySubjects}}
    @onchange={{action this.selectSubject}}
    @selectedItemComponent='subjects/search/search-result'
    @searchMessage={{t 'app_components.subject_widget.search_subjects'}}
    @renderInPlace={{true}}
    @searchField='text'
    @options={{this.queryResults}}
    @placeholder={{t 'general.search'}}
    as |subject|
>
    <Subjects::Search::SearchResult @subject={{subject}} />
</PowerSelect>
