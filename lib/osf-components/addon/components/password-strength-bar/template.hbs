{{#if (and @shouldShowMessages this.message)}}
    <div class='{{if this.valid 'text-warning' 'text-danger'}}' local-class='warning-message'>
        {{this.message}}
    </div>
{{/if}}
<div data-test-password-bar hidden={{not this.progress}}>
    <div class='progress' local-class='create-password'>
        <div
            data-test-password-color-bar
            class='progress-bar progress-bar-sm progress-bar-{{this.progress}} progress-bar-{{this.progressStyle}}'
            role='progressbar'>
        </div>
    </div>
</div>
