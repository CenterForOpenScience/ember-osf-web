<div data-test-search-bar>
    <span
        data-analytics-category='text'
        local-class='iconInput'
    >
        <span>
            <FaIcon
                @icon='search'
                @fixedWidth={{true}}
            />
        </span>
        {{! template-lint-disable no-implicit-this }}
        <input
            data-test-search-input
            type='text'
            aria-label='{{t 'osf-components.search-bar.aria'}}'
            placeholder='{{t 'osf-components.search-bar.placeholder'}}'
            enter={{action this._onSearch this.value}}
            value={{mut this.value}}
        >
        {{! template-lint-enable no-implicit-this }}
    </span>
</div>
