{{#if this.isButton}}
    <BsButton
        data-test-collapsed={{this.isCollapsed}}
        local-class='Link
            {{if this.isCollapsed 'Collapsed'}}
            {{if this.isCurrentPage 'CurrentPage'}}
            {{if this.isDrawer 'Drawer'}}'
        @onClick={{@onClick}}
        @type='link'
        ...attributes
    >
        {{yield (hash
            label=(component 'osf-layout/registries-side-nav/label'
                label=@label
                count=@count
                isCollapsed=this.isCollapsed
            )
            icon=(component 'osf-layout/registries-side-nav/icon'
                fixedWidth=true
                icon=@icon
            )
        )}}
    </BsButton>
{{else}}
    <OsfLink
        data-test-collapsed={{this.isCollapsed}}
        local-class='Link
            {{if this.isCollapsed 'Collapsed'}}
            {{if this.isCurrentPage 'CurrentPage'}}
            {{if this.isDrawer 'Drawer'}}'
        @route={{@route}}
        @models={{@models}}
        @href={{@href}}
        @onClick={{@onClick}}
        ...attributes
    >
        {{yield (hash
            label=(component 'osf-layout/registries-side-nav/label'
                label=@label
                count=@count
                isCollapsed=this.isCollapsed
            )
            icon=(component 'osf-layout/registries-side-nav/icon'
                fixedWidth=true
                icon=@icon
            )
        )}}
    </OsfLink>
{{/if}}
