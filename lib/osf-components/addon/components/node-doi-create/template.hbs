<div local-class='CreateMessage'>
    <FaIcon @icon='info-circle' @size='4x' @fixedWidth={{true}} />
    <div>
        <p>{{t 'registries.registration_metadata.mint_doi.header'}}</p>
        <p>{{t 'registries.registration_metadata.mint_doi.text'}}</p>
    </div>
</div>
<div local-class='CreateButton'>
    <Button
        data-analytics-name='Create DOI'
        data-test-create-doi
        disabled={{@manager.requestDoi.isRunning}}
        @type='primary'
        {{on 'click' (action @manager.requestDoi)}}
    >
        {{t 'registries.registration_metadata.create_doi'}}
    </Button>
</div>
