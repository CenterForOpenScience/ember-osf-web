{{assert 'FormControls::Select - @options xor @search are required' (xor @options @search)}}
{{assert 'FormControls::Select - @valuePath are required' @valuePath}}
{{assert 'FormControls::Select - @changeseet are required' @changeset}}
<FormControls::Wrapper
    @shouldShowMessages={{@shouldShowMessages}}
    @label={{@label}}
    @changeset={{@changeset}}
    @valuePath={{@valuePath}}
    as |inputElementId|
>
    <div
        data-test-power-select-dropdown
        id={{inputElementId}}
        ...attributes
    >
        <PowerSelect
            @options={{this.options}}
            @onChange={{this.updateChangeset}}
            @searchField={{@searchField}}
            @searchEnabled={{@searchEnabled}}
            @selected={{or (get @changeset this.valuePath) null}}
            @disabled={{@disabled}}
            @search={{@search}}
            @renderInPlace={{@renderInPlace}}
            as |option|
        >
            <span
                aria-label={{option}}
                data-test-option={{option}}
            >
                {{yield option}}
            </span>
        </PowerSelect>
    </div>
</FormControls::Wrapper>