<OsfDialog
    @isOpen={{@isOpen}}
    @onClose={{@closeDialog}}
    as |dialog|
>
    <dialog.heading>
        {{t 'osf-components.files-widget.create_folder'}}
    </dialog.heading>
    <dialog.main local-class='dialog-main'>
        <FormControls
            @changeset={{@changeset}}
            as |form|
        >
            <form.text
                @placeholder={{t 'osf-components.files-widget.folder_name_placeholder'}}
                @valuePath='name'
            />
        </FormControls>
    </dialog.main>
    <dialog.footer>
        <Button
            {{on 'click' dialog.close}}
        >
            {{t 'general.cancel'}}
        </Button>
        <Button
            disabled={{@shouldDisableButtons}}
            @type='primary'
            {{on 'click' (action @createFolder (hash onSuccess=dialog.close))}}
        >
            {{t 'osf-components.files-widget.create'}}
        </Button>
    </dialog.footer>
</OsfDialog>
