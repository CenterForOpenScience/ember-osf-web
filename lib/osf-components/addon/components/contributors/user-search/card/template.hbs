<div data-test-contributor-card local-class='CardContainer'>
    <div data-test-contributor-card-main local-class='MainSection'>
        <span local-class='CardSection'>
            <img
                data-test-contributor-gravatar
                class='m-r-xs'
                src={{@user.links.profile_image}}
                alt={{@user.fullName}}
                height='30'
                width='30'
            >
            <OsfLink
                data-test-contributor-link={{@user.id}}
                data-analytics-name='View user'
                @route='guid-user'
                @models={{array @user.id}}
            >
                {{@user.fullName}}
            </OsfLink>
        </span>
        <span local-class='CardSection'>
            <OsfButton
                data-test-add-contributor
                local-class='AddButton'
                @type='light'
                @onClick={{fn @addUser @user}}
            >
                {{fa-icon 'plus'}}
            </OsfButton>
        </span>
    </div>
</div>