{{#if @result.funders}}
    <div>
        <span>{{t 'osf-components.search-result-card.funder'}}: </span>
        <InlineList
            @items={{@result.funders}}
            @total={{@result.funders.count}}
            @truncate={{5}}
            as |list|
        >
            <a href={{list.item.identifier}} target='_blank' rel='noopener noreferrer'>{{list.item.name}}</a>
        </InlineList>
    </div>
{{/if}}
<div>
    <span>{{t 'osf-components.search-result-card.description'}}:</span>
</div>
<div>
    <span>{{t 'osf-components.search-result-card.license'}}: <a href={{@result.license.identifier}} target='_blank' rel='noopener noreferrer'>{{@result.license.name}}</a></span>
</div>
<div>
    <span>{{t 'osf-components.search-result-card.doi'}}: </span>
    <InlineList
        @items={{@result.doi}}
        @total={{@result.doi.count}}
        @truncate={{5}}
        as |list|
    >
        <a href={{list.item}} target='_blank' rel='noopener noreferrer'>{{list.item}}</a>
    </InlineList>
</div>