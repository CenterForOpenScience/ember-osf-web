<div
    data-analytics-scope='File list item'
    data-analytics-name='Open file'
    class='row'
    local-class='file-row-item'
    onclick={{action this.open}}
    role='option'
>
    <div data-test-file-item
        class='col-lg-12 col-md-9 col-sm-9 col-xs-12'
        local-class='file-row-col'
    >
        {{file-icon item=@item}}
        <OsfLink
            data-test-file-item-link={{@item.itemName}}
            data-analytics-name='Open file'
            @route='guid-file'
            @models={{array @item.guid}}
            @onClick={{action this.open}}
        >
            {{@item.itemName}}
        </OsfLink>
    </div>
</div>
