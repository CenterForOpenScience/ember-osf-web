<div local-class='recent-list-container' data-analytics-scope='Registries index' >
    <div local-class='see-more-container {{if this.media.isMobile 'mobile'}}'>
        <div local-class='title'>
            {{t 'registries.index.recent.title'}}
        </div>
        <div local-class='see-more'>
            <LinkToExternal
                @route='search'
                @query={{hash resourceType='Registration,RegistrationComponent'}}
            >
                {{t 'registries.index.recent.more'}}
            </LinkToExternal>
        </div>
    </div>

    {{#each @recentRegistrations as |reg|}}
        <div local-class='recent-registries-container'>
            <div local-class='title'>
                <h4>
                    <OsfLink
                        data-test-recent-registration-id={{reg.id}}
                        data-analytics-name='Browse recent registrations'
                        data-analytics-extra={{reg.id}}
                        @route='registries.overview'
                        @models={{array reg.id}}
                    >
                        {{reg.title}}
                    </OsfLink>
                </h4>
            </div>
            <div local-class='contributors'>
                <ul
                    data-test-recent-registration-contrib-list={{reg.id}}
                    local-class='contributor'
                >
                    {{#each reg.bibliographicContributors as |contrib|}}
                        <li data-test-recent-registration-contrib={{contrib.bibliographic}}>
                            {{contrib.users.fullName}}
                        </li>
                    {{/each}}
                </ul>
            </div>
            <hr local-class='hr'>
        </div>
    {{/each}}
</div>
