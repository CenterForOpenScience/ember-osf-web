{{#if @registration.userHasAdminPermission}}
    <div local-class='Editable'>
        <h4>{{t @title}}</h4>
        {{#if @registration.userHasAdminPermission}}
            <OsfButton
               data-test-add-institution-button
               aria-label={{t 'general.add'}}
               data-analytics-name={{@analyticsName}}
               @type='link'
               @onClick={{action (mut this.showEditable) true}}
            >
                <FaIcon @icon='pencil' @fixedWidth={{true}} />
            </OsfButton>
        {{/if}}
    </div>
    {{yield (hash showEditable=this.showEditable)}}
{{else}}
    <h4>{{t @title}}</h4>
    {{yield}}
{{/if}}
