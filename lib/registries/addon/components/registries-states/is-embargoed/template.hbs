<BsButton
    @type='primary'
    @onClick={{action (mut this.showModal) true}}
>
    {{t 'registries.overview.embargo.action'}}
</BsButton>

<BsModal
    @tagName='span'
    @open={{this.showModal}}
    @onSubmit={{action (perform this.endEmbargo)}}
    @onHide={{action this.close}}
    @renderInPlace={{true}}
    as |modal|
>
    <modal.header>
        <h3>{{t 'registries.overview.embargo.action'}}</h3>
    </modal.header>

    <modal.body>
        <p>
            {{t 'registries.overview.embargo.confirm_text'}}
        </p>
    </modal.body>

    <modal.footer>
        <BsButton
            disabled={{this.endEmbargo.isRunning}}
            @onClick={{action modal.close}}
        >
            {{t 'general.cancel'}}
        </BsButton>
        <BsButton
            data-analytics-name='Terminate embargo early'
            @type='danger'
            @onClick={{action modal.submit}}
        >
            {{t 'registries.overview.embargo.confirm_button_text'}}
        </BsButton>
    </modal.footer>
</BsModal>
