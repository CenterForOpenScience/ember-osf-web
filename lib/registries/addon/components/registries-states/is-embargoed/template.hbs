<Button
    @type='primary'
    {{on 'click' (action (mut this.showModal) true)}}
>
    {{t 'registries.overview.embargo.action'}}
</Button>

<BsModal
    @tagName='span'
    @open={{this.showModal}}
    @onSubmit={{action (perform this.endEmbargo)}}
    @onHide={{action this.close}}
    @renderInPlace={{true}}
    as |modal|
>
    <modal.header>
        <h3>{{t 'registries.overview.embargo.action'}}</h3>
    </modal.header>

    <modal.body>
        <p>
            {{t 'registries.overview.embargo.confirm_text'}}
        </p>
    </modal.body>

    <modal.footer>
        <Button
            disabled={{this.endEmbargo.isRunning}}
            {{on 'click' (action modal.close)}}
        >
            {{t 'general.cancel'}}
        </Button>
        <Button
            data-analytics-name='Terminate embargo early'
            @type='destroy'
            {{on 'click' (action modal.submit)}}
        >
            {{t 'registries.overview.embargo.confirm_button_text'}}
        </Button>
    </modal.footer>
</BsModal>
