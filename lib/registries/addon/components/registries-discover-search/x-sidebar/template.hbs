<div class="row">
    <div class="col-xs-6">
      <h4>{{t 'registries.discover.sidebar.refine_search'}}</h4>
    </div>
    <div class="col-xs-6">
        <button data-test-clear-filters class="pull-right btn btn-sm btn-default" {{action 'clearFilters'}}>
            {{t 'registries.discover.sidebar.clear_filters'}}
            {{fa-icon 'times'}}
        </button>
    </div>
</div>

{{#each filters as |filter|}}
    <button class="{{filter.class}}" local-class="Sidebar__ActiveFilter" {{action 'removeFilter' filter.filter}}>
        {{filter.display}}
        {{fa-icon 'times-circle'}}
    </button>
{{/each}}

<div local-class="Sidebar__Facets">
    {{yield (hash
        filters=filters
        searchOptions=searchOptions
        onSearchOptionsUpdated=(action _onSearchOptionsUpdated)
    )}}
</div>
