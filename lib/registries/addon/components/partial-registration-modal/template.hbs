<OsfDialog @isOpen={{@modalManager.isOpen}} as |dialog|>
    <dialog.heading local-class='modal-title'>
        {{t 'registries.partial_registration_modal.title'}}
    </dialog.heading>
    <dialog.main local-class='modal-body'>
        <OsfButton @type=='link' local-class='select-clear-button' @onClick={{action @modalManager.selectAll}}>
            {{t 'registries.partial_registration_modal.selectAll'}}
        </OsfButton>
        |
        <OsfButton @type=='link' local-class='select-clear-button' @onClick={{action @modalManager.clearAll}}>
            {{t 'registries.partial_registration_modal.clearAll'}}
        </OsfButton>
        {{#if @modalManager.loadAllChildNodes.isRunning}}
            <LoadingIndicator />
        {{else}}
            <HierarchicalList::ItemManager @item={{@modalManager.rootNode}} @listManager={{@modalManager}} @isRoot={{true}} as
                |itemManager|>
                <HierarchicalList::Item @manager={{itemManager}} />
            </HierarchicalList::ItemManager>
        {{/if}}
    </dialog.main>
    <dialog.footer>
        <OsfButton @type='primary' local-class='modal-button-continue'>
            {{t 'registries.partial_registration_modal.continueButton'}}
        </OsfButton>
        <OsfButton @type='default' local-class='modal-button-cancel'>
            {{t 'registries.partial_registration_modal.cancelButton'}}
        </OsfButton>
    </dialog.footer>
</OsfDialog>
