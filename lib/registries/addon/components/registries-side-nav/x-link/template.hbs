{{#if this.isButton}}
    <OsfButton
        data-test-collapsed='{{this.isCollapsed}}'
        local-class='{{this.wrapperClasses}}'
        @onClick={{@onClick}}
        @type='link'
        ...attributes
    >
        {{yield (hash
            label=(component 'registries-side-nav/label'
                label=@label
                count=@count
                isCollapsed=this.isCollapsed
            )
            icon=(component 'registries-side-nav/icon'
                fixedWidth=true
                icon=@icon
            )
        )}}
    </OsfButton>
{{else}}
    <OsfLink
        data-test-collapsed='{{this.isCollapsed}}'
        local-class='{{this.wrapperClasses}}'
        @route={{@route}}
        @models={{@models}}
        @href={{@href}}
        @onClick={{@onClick}}
        ...attributes
    >
        {{yield (hash
            label=(component 'registries-side-nav/label'
                label=@label
                count=@count
                isCollapsed=this.isCollapsed
            )
            icon=(component 'registries-side-nav/icon'
                fixedWidth=true
                icon=@icon
            )
        )}}
    </OsfLink>
{{/if}}
