{{#if this.showDiscard}}
    <button data-test-submit-section-discard class='btn btn-default' {{action this.discard}}>
        {{#if @discardButtonLabel}}
            {{@discardButtonLabel}}
        {{else}}
            {{t (concat 'app_components.submit_section.discard')}}
        {{/if}}
    </button>
{{/if}}
<button data-test-submit-section-continue class='btn btn-primary' {{action this.continue}} disabled={{this.continueDisabled}}>
    {{#if @continueButtonLabel}}
        {{@continueButtonLabel}}
    {{else}}
        {{t (concat 'app_components.submit_section.save')}}
    {{/if}}
</button>
