{{!Copied from Ember-SHARE}}
<div local-class='p-t-md'>
    {{#each @facetContexts as |context|}}
        <div
            data-test-facet-panel={{context.title}}
            local-class='facet-panel'
            hidden={{get context 'options.hidden'}}
        >
            <div
                data-test-facet-title
                local-class='facet-heading'
            >
                {{context.title}}
            </div>
            <div
                data-test-facet-body
                local-class='facet-body'
            >
                {{component
                    (concat 'discover-page/facets/' context.component)
                    context=context
                    filterChanged=@filterChanged
                    filterReplace=@filterReplace
                }}
            </div>
        </div>
    {{/each}}
</div>
