<DocsDemo as |demo|>
    <demo.example @name='editable-field.institutions.hbs'>
        <EditableField
            data-analytics-scope='Handbook'
            @managerComponent={{component 'editable-field/institutions-manager' node=this.registration}}
            @registration={{this.registration}}
            @title={{t 'registries.registration_metadata.affiliated_institutions'}}
            @name='affiliated institutions'
            as |field|
        >
            <field.edit>
                <InstitutionSelectList
                    @user={{this.currentUser.user}}
                    @node={{this.registration}}
                    @manager={{field.manager}}
                />
            </field.edit>
            <field.display>
                <InstitutionsList
                    @reloadList={{action (mut field.manager.reloadList)}}
                    @node={{this.registration}}
                />
            </field.display>
        </EditableField>
    </demo.example>

    <demo.snippet @name='editable-field.institutions.hbs' />
    <demo.snippet
        @name='editable-field.institution-manager-interface.ts'
        @label='component.ts'
    />
</DocsDemo>
