<DocsDemo as |demo|>
    <demo.example @name='validated-model-form.demo-create.hbs'>
        <ValidatedModelForm
            @onSave={{action this.onSave}}
            @modelName='node'
            @onDirtChange={{this.changeDirtCreateForm}}
            as |form|
        >
            <form.text
                @valuePath='title'
                @label='Title'
            />
            <form.textarea
                @valuePath='description'
                @label='Description'
            />
            <BsButton
                @buttonType='submit'
                @disabled={{form.disabled}}
            >
                Save
            </BsButton>
        </ValidatedModelForm>
    </demo.example>

    <demo.snippet @name='validated-model-form.demo-create.hbs' />
</DocsDemo>
