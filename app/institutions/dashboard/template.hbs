<div class='container'>
    <div local-class='banner'>
        <img src='{{this.institution.assets.banner}}' alt='{{this.institution.name}}'>
    </div>
    <div style='display: flex;'>
        <div local-class='table-wrapper'>
            <Institutions::Dashboard::-Components::InstitutionalUsersList @model={{this.model}} />
        </div>
        <div local-class='panel-wrapper'>
            <Institutions::Dashboard::-Components::Panel
                    local-class='sso-users-connected'
                    @isLoading={{this.model.taskInstance.isRunning}}
                    @title={{t 'institutions.dashboard.users_connected_panel'}}
            >
                {{this.institution.statSummary.ssoUsersConnected}}
            </Institutions::Dashboard::-Components::Panel>
            <Panel as |panel|>
                <panel.heading @title='{{t 'institutions.dashboard.projects_panel'}}' />
                <panel.body>
                    {{ember-chart type='pie' data=this.projectData}}
                    <h3>{{this.numProjects}}</h3>
                    <p>
                        <strong>{{this.institution.statSummary.numPublicProjects}}</strong> {{t 'institutions.dashboard.public'}}
                    </p>
                    <p>
                        <strong>{{this.institution.statSummary.numPrivateProjects}}</strong> {{t 'institutions.dashboard.private'}}
                    </p>
                </panel.body>
            </Panel>
            <Panel local-class='departments' as |panel|>
                <panel.heading @title='{{t 'institutions.dashboard.departments_panel'}}' />
                <panel.body>
                    <p></p>
                </panel.body>
            </Panel>
        </div>
    </div>
</div>