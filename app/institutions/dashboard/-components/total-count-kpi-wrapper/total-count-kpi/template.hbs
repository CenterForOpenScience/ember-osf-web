<div local-class='kpi-container'>
    <div local-class='left-container'>
        <div local-class='data' data-test-kpi-data>
            {{#if @data.total}}
                {{@data.total}}
            {{else}}
                {{t 'institutions.dashboard.empty'}}
            {{/if}}
        </div>
        <span data-test-kpi-title local-class='title'>{{@data.title}}</span>
    </div>
    <div local-class='right-container'>
        <FaIcon data-test-kpi-icon @icon='{{@data.icon}}' local-class='icon'/>
    </div>
</div>