<Panel local-class='panel panel-overall' ...attributes as |panel|>
    <panel.heading>
        <span local-class='panel-heading panel-title'>{{@title}}</span>
    </panel.heading>
    <panel.body>
        {{#if @isLoading}}
            <LoadingIndicator data-test-loading-indicator @dark={{true}} />
        {{else}}
            <div local-class='panel-body'>{{yield}}</div>
        {{/if}}
    </panel.body>
</Panel>