<div ...attributes>
    {{#let (unique-id 'upload-files-dropzone') as |id|}}
        <DropzoneWidget
            local-class='upload-file-widget'
            @buildUrl={{this.buildUrl}}
            @options={{this.dropzoneOptions}}
            @dropzone={{false}}
            @dragenter={{@dragEnter}}
            @dragleave={{@dragLeave}}
            @dragover={{@dragOver}}
            @drop={{@drop}}
            @enable={{@enable}}
            @id={{id}}
            @clickable={{this.clickableElementSelectors}}
            @preUpload={{perform this.createPreprint}}
        >
            {{yield}}
        </DropzoneWidget>
    {{/let}}
</div>
