{{#each this.sortedList as |pair|}}
    <div local-class='subject-container {{if this.isMobile 'mobile'}}' data-test-subject-container>
        {{#each pair as |subject|}}
            <div local-class='subject-item' data-test-taxonomy-container>
                <OsfLink
                    data-test-taxonomy-link
                    data-analytics-name='Preprints taxonomy link'
                    local-class='btn subject-button'
                    @route='preprints.discover'
                    @model={{array this.provider.id}}
                    @queryParams={{subject.queryParam}}
                >
                    {{subject.text}}
                </OsfLink>
            </div>
        {{/each}}
    </div>
{{/each}}
