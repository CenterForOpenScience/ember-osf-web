{{#if this.displayComponent}}
    <div local-class='institution-list-container {{if (is-mobile) 'mobile'}}'>
        <label data-test-affiliated-institutions-label>
            {{t 'preprints.submit.step-metadata.institutions.label'}}
        </label>
        <p data-test-affiliated-institutions-description>
            {{this.descriptionDisplay}}
        </p>
        {{#each @manager.institutions as |institution index|}}
            <label data-test-institution={{institution.id}}
                local-class='institution-container'>
                <div local-class='institution-checkbox'>
                    <Input
                        data-test-institution-input={{index}}
                        @type='checkbox'
                        @disabled={{@manager.isElementDisabled}}
                        @checked={{institution.isSelected}}
                        {{on 'change' (fn @manager.toggleInstitution institution)}}
                    />
                </div>
                <div local-class='label' data-test-institution-name={{index}}>
                    {{institution.name}}
                </div>
            </label>
        {{/each}}
    </div>
{{/if}}