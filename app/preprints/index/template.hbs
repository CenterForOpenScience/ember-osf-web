{{page-title (t 'preprints.title')}}

<div class='preprints-page'>

    {{!HEADER}}
    <div class='preprint-header'>
        {{!CONTAINER}}
        <div class='container'>
            {{!HEADER ROW}}
            <div class='row'>
                {{!TITLE}}
                <div class='text-center m-t-lg col-xs-12'>
                    {{#if this.theme.isProvider}}
                        <div class='provider-brand' style={{safe-markup 
        (concat 'background-image: url('' (provider-asset this.theme.id "wide_color.png") '')')}}></div>
                    {{else}}
                        <div class='provider-brand'></div>
                    {{/if}}
                    <p class='lead'>
                        {{#if this.theme.isProvider}}
                            {{html-safe this.theme.provider.description 'description'}}
                            <br>
                            <small>
                                <a href='{{this.host}}preprints' onbeforeclick={{action 'click' 'link' 'Index - Powered By'}}>
                                    {{t 'index.header.powered_by'}}
                                </a>
                            </small>
                        {{/if}}
                    </p>
                </div>
                {{!SEARCH}}
                <div class='preprint-search col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 m-v-lg' >
                    {{search-preprints search='search'}}
                    {{#unless this.theme.isProvider}}
                        {{this.total-share-results}}
                    {{/unless}}
                </div>
            </div>
            {{!END ROW}}
            {{#if this.theme.provider.allowSubmissions}}
                <div class='row'>
                    <div class='text-center col-xs-12'>
                        <p class='lead'>{{t 'index.header.or'}}</p>
                        <a type='button' class='btn btn-success btn-lg preprint-submit-button' onclick={{action 'click' 'link' 'Index - Add preprint'}} href={{concat this.theme.pathPrefix 'submit'}}>
                            {{t this.submitLabel documentType=this.theme.provider.content.documentType}}
                        </a>
                        <div class='m-t-md'>
                            {{#link-to (route-prefix 'content') (if this.theme.provider.example this.theme.provider.example 'khbvy') invokeAction=(action 'click' 'link' 'Index - See example')}}
                                {{t 'index.header.example'}}
                            {{/link-to}}
                        </div>
                    </div>
                </div>
            {{/if}}
        </div>
        {{!END CONTAINER}}
    </div>
    {{!END HEADER}}

    {{!SUBJECTS}}
    <div class='preprint-subjects p-v-md'>
        <div class='container'>
            <div class='row p-v-md'>
                <div class='col-xs-12'>
                    <h2>{{#if this.theme.provider.additionalProviders}}
                            {{t 'index.subjects.heading.provider'}}
                        {{else}}
                            {{if this.theme.provider.hasHighlightedSubjects (t 'index.subjects.heading.hasHighlightedSubjects') (t 'index.subjects.heading.noHighlightedSubjects')}}
                        {{/if}}
                    </h2>
                    {{#if this.theme.provider.hasHighlightedSubjects}}
                        {{#link-to (route-prefix 'discover') class='seeAllSubjects'}}
                            {{t 'index.subjects.links.seeAllSubjects'}}
                        {{/link-to}}
                    {{/if}}
                    <div class='subjectsList p-lg'>
                        {{#if this.theme.provider.additionalProviders}}
                            {{additional-provider-list additionalProviders=this.theme.provider.additionalProviders}}
                        {{else}}
                            {{taxonomy-top-list list=this.model.taxonomies}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{#unless this.theme.isProvider}}
        {{!SERVICES}}
        <div class='preprint-tool p-v-md'>
            <div class='container'>
                <div class='row'>
                    <div class='col-xs-12'>
                        <h2>{{t 'index.services.top.heading' documentType=this.theme.provider.content.documentType}}</h2>
                        <p class='m-b-lg'>
                            {{t 'index.services.top.paragraph' documentType=this.theme.provider.content.documentType}}
                        </p>
                    </div>
                </div>
                <div class='row p-v-md'>
                    <div class='provider-logos'>
                        {{#each this.model.brandedProviders as |provider| }}
                            {{#if (not-eq provider.id this.livedata) }}
                                <a href='{{branded-preprint-url provider}}' title='{{this.provider.name}}' class='provider-logo-item' style={{safe-markup (concat 'background-image: url('' (provider-asset provider.id "wide_white.png") '')')}}></a>
                            {{/if}}
                        {{/each}}
                    </div>
                </div>
                <div class='row p-v-md'>
                    <div class='col-md-12 text-center'>
                        <p class='lead'>
                            {{t 'index.services.bottom.p1' documentType=this.theme.provider.content.documentType}}
                            <div class='p-t-sm'>
                                {{t 'index.services.bottom.div.line1'}}
                                <a class='source_code_link' href='https://github.com/CenterForOpenScience/ember-preprints'
                                    onclick={{action 'click' 'link' 'Index - GitHub Repo' 'https://github.com/CenterForOpenScience/ember-preprints'}}>
                                    {{t 'index.services.bottom.div.linkText1'}}
                                </a>
                                {{t 'index.services.bottom.div.line2'}}
                                <a class='source_code_link' href='https://cos.io/our-products/product-roadmap/'
                                    onclick={{action 'click' 'link' 'Index - public roadmap' 'https://cos.io/our-products/product-roadmap/'}}>
                                    {{t 'index.services.bottom.div.linkText2'}}
                                </a>
                                {{t 'index.services.bottom.div.line3'}}
                            </div>
                        </p>
                        <a href='mailto:contact@osf.io' class='btn btn-info btn-lg' onclick={{action 'contactLink'  @emailHref 'link' 'click' 'Index - contact email'}}>
                            {{t 'index.services.bottom.contact'}}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {{/unless}}


    {{!ADVISORY GROUP}}
    {{#if this.theme.provider.advisoryBoard.length}}
        <div class='preprint-advisory p-v-md'>
            <div class='container'>
                <div class='row'>
                    {{html-safe this.theme.provider.advisoryBoard 'advisory-board'}}
                </div>
            </div>
        </div>
    {{/if}}
</div>
{{!END INDEX}}
