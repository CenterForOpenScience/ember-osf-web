<DocsDemo as |demo|>
    <demo.example @name='bs-alert.danger-hidden.hbs'>
        <BsAlert @type='danger' @dismissible={{false}} @hidden={{this.hideAlert}}>
            <strong>Danger, Will Robinson!</strong>
        </BsAlert>
    </demo.example>

    <OsfButton
        @class='center-block m-b-lg'
        @onClick={{action (mut this.hideAlert) (not this.hideAlert)}}
    >
        set: hideAlert = {{not this.hideAlert}}
    </OsfButton>

    <demo.snippet @name='bs-alert.danger-hidden.hbs' />
</DocsDemo>
