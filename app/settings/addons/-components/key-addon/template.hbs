{{#let
    (component 'settings/addons/-components/addon')
    as |Addon|
}}
    <Addon @addon={{@addon}} @userAddons={{@userAddons}}>
         <OsfButton
             data-analytics-name={{concat @addon.name ' addon'}}
             @type='link'
             @onClick={{action this.openModal}}
             local-class='button'
         >
             {{t 'settings.addons.link'}}
         </OsfButton>
    </Addon>
    <BsModal
        @open={{this.modalOpen}}
        @onHide={{action this.closeModal}}
        as |modal|
    >
        <ValidatedModelForm
            @modelName='account'
            @target={{this}}
            @modelProperties={{this.modelProperties}}
            @onSaveOverride={{action this.onSave}}
            as |form|
        >
            <modal.header>
                <h3>{{t 'settings.addons.account'}} {{@addon.name}}</h3>
            </modal.header>
            <modal.body>
                <div local-class='form-item'>
                    <h4>{{t 'settings.addons.access_key'}}</h4>
                    <form.text
                        @valuePath='accessKey'
                        @value={{this.accessKey}}
                        @placeholder={{t 'general.required'}}
                    />
                </div>
                <div local-class='form-item'>
                    <h4>{{t 'settings.addons.secret_key'}}</h4>
                    <form.text
                        @password={{true}}
                        @valuePath='secretKey'
                        @value={{this.secretKey}}
                        @placeholder={{t 'general.required'}}
                    />
                </div>
                <div local-class='form-item'>
                    <div local-class='form-buttons'>
                        <OsfButton @onClick={{action this.closeModal}}>
                            {{t 'general.cancel'}}
                        </OsfButton>
                        <OsfButton
                            @disabled={{this.addonLoading}}
                            @buttonType='submit'
                            @type='primary'
                        >
                            {{#if this.addonLoading}}
                                <LoadingIndicator local-class='loading-icon' @inline={{true}} />
                            {{else}}
                                {{t 'general.save'}}
                            {{/if}}
                        </OsfButton>
                    </div>
                </div>
            </modal.body>
        </ValidatedModelForm>
    </BsModal>
{{/let}}
