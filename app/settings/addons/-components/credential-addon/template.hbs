{{#let
    (component 'settings/addons/-components/addon')
    as |Addon|
}}
    <Addon @addon={{@addon}} @userAddons={{@userAddons}}>
        <OsfButton
            data-analytics-name={{concat @addon.name ' addon'}}
            @type='link'
            @onClick={{action this.openModal}}
            local-class='button'
        >
            {{t 'settings.addons.link'}}
        </OsfButton>
    </Addon>
    <BsModal
        @open={{this.modalOpen}}
        @onHide={{action this.closeModal}}
        as |modal|
    >
        <OsfForm
            @formData={{this}}
            @onSave={{action this.onSave}}
            as |form|
        >
            <modal.header>
                <h3>{{t 'settings.addons.account'}} {{@addon.name}}</h3>
            </modal.header>
            <modal.body>
                <div local-class='form-item'>
                    <h4>{{@addon.name}} {{t 'settings.addons.url'}}</h4>
                    <form.text
                        @value={{this.profileUrl}}
                        @valuePath='profileUrl'
                        @placeholder={{t 'general.required'}}
                        @inputAddon={{t 'settings.addons.https'}}
                    />
                    <small local-class='sub-text'>
                        {{t 'settings.addons.only'}}
                        {{@addon.name}}
                        {{t 'settings.addons.url_support'}}
                    </small>
                </div>
                <div local-class='form-item'>
                    <h4>{{t 'settings.addons.username'}}</h4>
                    <form.text
                        @value={{this.username}}
                        @valuePath='username'
                        @placeholder={{t 'general.required'}}
                    />
                </div>
                <div local-class='form-item'>
                    <h4>{{t 'settings.addons.password'}}</h4>
                    <form.text
                        @value={{this.password}}
                        @valuePath='password'
                        @password={{true}}
                        @placeholder={{t 'general.required'}}
                    />
                </div>
                <div local-class='form-item'>
                    <div local-class='form-buttons'>
                        <OsfButton @onClick={{action this.closeModal}}>
                            {{t 'general.cancel'}}
                        </OsfButton>
                        <OsfButton
                            @disabled={{this.addonLoading}}
                            @buttonType='submit'
                            @type='primary'
                        >
                            {{#if this.addonLoading}}
                                <LoadingIndicator local-class='loading-icon' @inline={{true}} />
                            {{else}}
                                {{t 'general.save'}}
                            {{/if}}
                        </OsfButton>
                    </div>
                </div>
            </modal.body>
        </OsfForm>
    </BsModal>
{{/let}}
