<div local-class='Top'>
    <p local-class='Top__explanation'>
        {{t 'settings.developer-apps.explanation'}}
    </p>
    {{! template-lint-disable no-implicit-this }}
    {{#link-to
        data-test-create-app-link
        'settings.developer-apps.create'
        class='btn btn-primary'
    }}
        {{t 'settings.developer-apps.createApp'}}
    {{/link-to}}
    {{! template-lint-enable no-implicit-this }}
</div>

{{#paginated-list/all
    modelName='developer-app'
    analyticsScope='Settings - Developer apps'
    as |list|
}}
    {{#list.item as |developerApp|}}
        {{settings/developer-apps/-components/app-card
            developerApp=developerApp
            onDelete=(action list.doReload)
        }}
    {{/list.item}}
{{/paginated-list/all}}
