<div class='container'>
    <div class='row'>
        <div class='col-xs-12'>
            <h2 class='page-header'>
                {{t 'general.settings'}}
                <a role='button'
                   local-class='NavToggle'
                   class='hidden-md hidden-lg'
                   aria-label={{t 'settings.toggleNav'}}
                   {{action (mut this.navCollapsed) (not this.navCollapsed)}}
                >
                    {{fa-icon 'bars'}}
                </a>
            </h2>
        </div>
    </div>
    <div class='row'>
        <div class='col-md-3'>
            {{#bs-collapse collapsed=this.navCollapsed local-class='SideNav'}}
                <div class='panel panel-default'>
                    {{#bs-nav type='pills' stacked=true as |nav|}}
                        {{#nav.item}}
                            <a href='/settings'
                               onclick={{action 'click' 'link' 'Settings - Profile information' target=analytics}}
                            >
                                {{t 'settings.profile.title'}}
                            </a>
                        {{/nav.item}}
                        {{#nav.item}}
                            <a href='/settings/account'
                               onclick={{action 'click' 'link' 'Settings - Account settings' target=analytics}}
                            >
                                {{t 'settings.account.title'}}
                            </a>
                        {{/nav.item}}
                        {{#nav.item}}
                            <a href='/settings/addons'
                               onclick={{action 'click' 'link' 'Settings - Configure add-on accounts' target=analytics}}
                            >
                                {{t 'settings.addons.title'}}
                            </a>
                        {{/nav.item}}
                        {{#nav.item}}
                            <a href='/settings/notifications'
                               onclick={{action 'click' 'link' 'Settings - Notifications' target=analytics}}
                            >
                                {{t 'settings.notifications.title'}}
                            </a>
                        {{/nav.item}}
                        {{#nav.item}}
                            <a href='/settings/applications'
                               onclick={{action 'click' 'link' 'Settings - Developer apps' target=analytics}}
                            >
                                {{t 'settings.apps.title'}}
                            </a>
                        {{/nav.item}}
                        {{#nav.item}}
                            {{#nav.link-to 'settings.tokens'
                                click=(action 'click' 'link' 'Settings - Personal access tokens' target=analytics)
                            }}
                                {{t 'settings.tokens.title'}}
                            {{/nav.link-to}}
                        {{/nav.item}}
                    {{/bs-nav}}
                </div>
            {{/bs-collapse}}
        </div>
        <div class='col-md-9'>
            {{outlet}}
        </div>
    </div>
</div>