<div local-class='Top'>
    <p local-class='Top__explanation'>
        {{t 'settings.tokens.explanation'}}
    </p>
    {{! template-lint-disable no-implicit-this }}
    {{#link-to
        data-test-create-token-link
        'settings.tokens.create'
        class='btn btn-primary'
    }}
        {{t 'settings.tokens.createToken'}}
    {{/link-to}}
    {{! template-lint-enable no-implicit-this }}
</div>

{{#paginated-list/all
    modelName='token'
    analyticsScope='Settings - Tokens'
    as |list|
}}
    {{#list.item as |token|}}
        {{settings/tokens/-components/token-card
            token=token
            onDelete=list.doReload
        }}
    {{/list.item}}
{{/paginated-list/all}}
