{{title (t 'quickfiles.title' user-name=user.fullName)}}
<div class='container'>
    <span id="drp" local-class="OsfDaterange" >
        {{date-range-picker
            label='Show analytics for date range:'
            start=startDate
            end=endDate
            alwaysShowCalendars=true
            parentEl="#drp"
            ranges=""
        }}
    </span>
    {{dateRange}}
    {{quickfile-nav user=user onQuickfiles=true}}
    <div class='row container' local-class="Content">
        {{#if canEdit}}
            <h5><i>{{t 'quickfiles.description'}}</i></h5>
        {{else}}
            <div style='height: 14px;'></div>
        {{/if}}
        {{file-browser
            user=user
            items=files
            filter=filter
            sort=sort
            canEdit=canEdit
            newProject=newProject
            openFile=(action 'openFile')
            updateFilter=(perform updateFilter)
            dropZoneId='quickfiles-dropzone'
            deleteFiles=(perform deleteFiles)
            moveFile=(perform moveFile)
            renameFile=(perform renameFile)
            addFile=(perform addFile)
        }}
    </div>
</div>

{{feedback-button text=(t 'quickfiles.feedback_dialog_text') pageName=pageName}}
