{{title (t 'home.title')}}
{{#if this.goodbye}}
    <BsAlert
        data-test-goodbye-banner
        @type="success"
        @classNames="text-center"
        local-class="goodbye"
        @onDismiss={{action 'click' 'button' 'Home - dismiss_alert' target=this.analytics}}
    >
        <p>{{t 'home.alert_logged_out'}}</p>
    </BsAlert>
{{/if}}
<BsModal
    @open={{this.modalOpen}}
    @backdrop={{true}}
    @onHidden={{action (mut this.modalOpen) false}}
    as | modal |
>
    <modal.header>
        <h4>{{t 'home.youtube_modal_title'}}</h4>
    </modal.header>
    <modal.body>
        <EmberYoutube
            @ytid={{this.youtubeId}}
            @playerVars={{this.playerVars}}
        />
    </modal.body>
</BsModal>
<div id="home-hero">
    <div class="container text-center">
        <div local-class="network-bg"></div>
        <h1 local-class="hero-brand">{{t 'home.brand'}}</h1>
        <h3 local-class="hero-tagline">{{t 'home.tagline'}}</h3>
        <OsfLogo @animate={{true}} />
        <div id="signUp" class="anchor"></div>
        <div id="hero-signup" class="container">
            <div class="row">
                <div class="col-sm-6 hidden-xs">
                    <a
                        class="youtube"
                        href="//www.youtube.com/watch?v={{this.youtubeId}}"
                        aria-label="{{t 'home.youtube_label'}}"
                        {{action (mut this.modalOpen) true}}
                        {{action 'click' 'link' 'Home - youtube_video' target=this.analytics}}
                    >
                        <i local-class="icon icon-play"></i>
                    </a>
                    <img
                        src="/assets/images/home/screenshot.png"
                        class="img-responsive"
                        id="screenshot"
                        alt="{{t 'home.osf_screenshot_alt'}}"
                    >
                </div>
                <div class="col-sm-6" local-class="sign-up-div">
                    <h2>{{t 'home.signup_title'}}</h2>
                    <div id="signUpScope">
                        <SignUpForm data-test-sign-up-form />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container" local-class="grey-pullout space-top space-bottom">
    <div class="row" local-class="space-bottom">
        <div class="col-xs-12 text-center">
            <h2>
                <strong>{{t 'home.collaboration'}}</strong>
            </h2>
            <h3>{{t 'home.management'}}</h3>
        </div>
    </div>
    <div class="row" local-class="feature-1">
        <div class="col-md-6">
            <div class="row">
                <div class="col-xs-1">
                    <i local-class="icon icon-cloud icon-feature"></i>
                </div>
                <div class="col-xs-9 col-xs-offset-1">
                    <h3>{{t 'home.structured_projects_title'}}</h3>
                    <p>
                        {{t 'home.structured_projects_paragraph'}}
                        <span class="label label-primary" local-class="label-home">{{t 'home.secure_cloud'}}</span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-1">
                    <i local-class="icon icon-group icon-feature"></i>
                </div>
                <div class="col-xs-9 col-xs-offset-1">
                    <h3>{{t 'home.control_access_title'}}</h3>
                    <p>
                        {{t 'home.control_access_paragraph'}}
                        <span class="label label-primary" local-class="label-home">{{t 'home.control_access_span'}}</span>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-1">
                    <i local-class="icon icon-workflow icon-feature"></i>
                </div>
                <div class="col-xs-9 col-xs-offset-1">
                    <h3>{{t 'home.workflow_title'}}</h3>
                    <p>
                        {{t 'home.workflow_paragraph'}}
                        <span class="label label-primary" local-class="label-home">{{t 'home.workflow_span'}}</span>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div local-class="student-wrap">
                <div local-class="student-image">
                    <div local-class="quote">
                        <span local-class="main">{{t 'home.student_main'}}</span>
                        <span local-class="attrib">{{t 'home.student_attrib'}}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
