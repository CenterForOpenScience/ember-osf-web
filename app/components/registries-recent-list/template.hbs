<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h2>
                {{t "registries.index.recent.title"}}
                <span local-class="SeeMore">
                    {{link-to (t 'registries.index.recent.more') 'discover'}}
                </span>
            </h2>
        </div>
    </div>

    {{#each registrations as |reg|}}
        <div class="row">
            <div class="col-xs-12">
                <h4>
                    <a
                        href={{reg.registrationURL}}
                        data-test-recent-registration-id={{reg.id}}
                        onclick={{action 'click' 'link' (concat 'Index - Browse Recent: ' reg.title) reg.mainLink target=analytics}}
                    >
                        {{reg.title}}
                    </a>
                </h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <ul local-class="RecentList__Contributors">
                    {{#each reg.contributors as |contrib|}}
                        {{#if contrib.bibliographic}}
                            <li>{{contrib.name}}</li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <hr>
    {{/each}}
</div>
