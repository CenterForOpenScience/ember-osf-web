<div local-class='meeting-container' data-test-hero-banner-container>
    <div local-class='meeting-header-container'>
        <img
            data-test-osf-meeting-img
            src='/assets/images/meetings/osf_meetings_white.png'
            alt={{t 'meetings.index.meetings-hero-banner.image_alt'}}
            local-class='meeting-logo'
        >
        <h2>
            {{t 'meetings.index.meetings-hero-banner.h3' htmlSafe=true}}
        </h2>
    </div>
    <div local-class='network-img'> </div>
    <div local-class='meeting-information-container {{if this.isMobile 'mobile'}}'>
        <div local-class='meeting-action-container'>
            <div local-class='icon-circle'>
                <FaIcon
                    data-test-fa-icon-users
                    @icon='users'
                    local-class='user-icon'
                />
            </div>
            <h3 local-class='font-weight'>
                {{t 'meetings.index.meetings-hero-banner.conference_organizers_h3'}}
            </h3>
            <p>
                {{t 'meetings.index.meetings-hero-banner.conference_organizers_help_text'}}
            </p>
            <div local-class='button-container'>
                <Button
                    data-test-register-button
                    @type='create'
                    {{on 'click' (action this.toggleRegisterPanel)}}
                >
                    {{t 'meetings.index.meetings-hero-banner.conference_organizers_register_button'}}
                </Button>
            </div>
            <CpPanel @open={{this.registerPanelOpen}} as |panel| >
                <panel.body>
                    <div data-test-register-panel-text class='osf-box-lt' local-class='register-box'>
                        {{t 'meetings.index.meetings-hero-banner.conference_organizers_register_panel_texts' htmlSafe=true}}
                    </div>
                </panel.body>
            </CpPanel>
        </div>
        <div local-class='meeting-action-container'>
            <div local-class='icon-circle'>
                <FaIcon
                    data-test-fa-icon-cloud-upload
                    @icon='cloud-upload-alt'
                    local-class='user-icon'
                />
            </div>
            <h3 local-class='font-weight'>
                {{t 'meetings.index.meetings-hero-banner.conference_participants_h3'}}
            </h3>
            <p>
                {{t 'meetings.index.meetings-hero-banner.conference_participants_help_text'}}
            </p>
            <div local-class='button-container'>
                <Button
                    data-test-upload-button
                    @type='create'
                    {{on 'click' (action this.toggleUploadPanel)}}
                >
                    {{t 'meetings.index.meetings-hero-banner.conference_participants_upload_button'}}
                </Button>
            </div>
            <CpPanel @open={{this.uploadPanelOpen}} as |panel| >
                <panel.body>
                    <div data-test-upload-panel-text class='osf-box-lt'
                        local-class='register-box'
                    >
                        {{t 'meetings.index.meetings-hero-banner.conference_participants_upload_panel_texts' htmlSafe=true}}
                    </div>
                </panel.body>
            </CpPanel>
        </div>
    </div>
</div>